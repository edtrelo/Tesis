{
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": ["-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOC%"]
    },
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": ["-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOC%"]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": ["%DOC%"]
    },
    {
    "name": "sync-pdf",
    "command": "/bin/bash",
    "args": ["./sync_pdf.sh"]
  }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex -> biber -> pdflatex x2",
      "tools": ["pdflatex", "biber", "pdflatex", "pdflatex"]
    },
    {
      "name": "xelatex -> biber -> xelatex x2 -> sync",
      "tools": ["xelatex", "biber", "xelatex", "xelatex", "sync-pdf"]
    }
  ],
  "files.exclude": {
  "**/*.aux": true,
  "**/*.log": true,
  "**/*.out": true,
  "**/*.toc": true,
  "**/*.synctex.gz": true,
  "**/*.fls": true,
  "**/*.fdb_latexmk": true,
  "**/*.run.xml": true,
  "**/*.bbl": true,
  "**/*.bcf": true,
  "**/*.blg": true
  },
  "latex-workshop.latex.recipe.default": "xelatex -> biber -> xelatex x2 -> sync",
  "latex-workshop.bibtex-format": "biblatex",
  "latex-workshop.latex.bibDirs": ["./"],
  "remote.containers.dockerPath": "/usr/local/bin/docker"
}

